<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/deepGreen" />

    <!-- Dotted / dashed border -->
    <stroke
        android:width="1dp"
        android:color="@color/lightVeryGreen"
        android:dashWidth="6dp"
        android:dashGap="4dp" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Inner padding -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

</shape>
