<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedTrust" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MedTrust" parent="Base.Theme.MedTrust" />

    <!-- White Calendar Dialog Theme -->
    <style name="LightCalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Map to widget style -->
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
    </style>

    <!-- Calendar Widget Style -->
    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">?attr/colorSurface</item> <!-- White BG -->
        <item name="dayStyle">@style/CalendarDayStyle</item>
        <item name="rangeFillColor">@color/lightBlue</item> <!-- light blue for range -->
    </style>

    <!-- Single Day Text Style -->
    <style name="CalendarDayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">@color/blue</item>
        <item name="itemFillColor">@color/lightBlue</item> <!-- circle background when selected -->
        <item name="itemStrokeColor">@color/blue</item>
        <item name="itemStrokeWidth">2dp</item>
    </style>

    <style name="GreenTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">

        <!-- Accent color (clock hand, selected time, buttons) -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="android:colorPrimary">@color/lightGreen</item>
        <item name="colorAccent">@color/lightGreen</item>
    </style>



</resources>