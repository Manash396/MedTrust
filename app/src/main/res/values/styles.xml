<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlineTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/blue</item>

        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

        <!-- Fix hint becoming pale -->
        <item name="hintTextColor">@color/hint_color</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>

        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/hint_color</item>
    </style>


</resources>