<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:contentDescription="@null"
            android:src="@drawable/outline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Appointments Details"
            android:textColor="@color/lightGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/shimmerLoadingSkeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/fragment_appointment_detail_skeleton"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="11dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/deepLightGreen"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="@color/deepLightGreen"
                            app:strokeWidth="1dp">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/incompleteIcon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="9dp"
                                    android:src="@drawable/baseline_history_24" />

                                <ImageView
                                    android:id="@+id/completeIcon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="9dp"
                                    android:src="@drawable/ic_tick_mark"
                                    android:visibility="invisible" />

                            </FrameLayout>


                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPCOMING"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointment Status"
                                android:textColor="@color/veryLightBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <!-- Green dot (Completed) -->
                            <View
                                android:id="@+id/greenDotCompletedAppt"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:background="@drawable/bg_green_dot" />

                            <!-- Orange dot (Upcoming / Pending) -->
                            <View
                                android:id="@+id/orangeDotUpcomingAppt"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:background="@drawable/bg_orange_dot" />

                        </FrameLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/round_white_bg"
                            android:src="@drawable/baseline_person_24" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nameDoctor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Sarah Wilson"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/specialist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cardiologist"
                                android:textColor="#2196F3"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/hospitalName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="General Hospital, NYC"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVideoCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="@color/lightGreen"
                        android:fontFamily="@font/roboto"
                        android:text="Join a Video Call"
                        android:textAllCaps="false"
                        android:textColor="@color/deepGreen"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/outline_videocam_24"
                        app:iconGravity="textStart"
                        app:iconSize="25dp"
                        app:iconTint="@color/black" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrescriptionDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="@color/lightGreen"
                        android:clickable="false"
                        android:enabled="true"
                        android:focusable="false"
                        android:fontFamily="@font/roboto"
                        android:text="Download Prescription"
                        android:textAllCaps="false"
                        android:textColor="@color/deepGreen"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:elevation="6dp"
                        app:icon="@drawable/baseline_picture_as_pdf_24"
                        app:iconGravity="textStart"
                        app:iconTint="@color/deepGreen" />


                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Consultation Summary"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="11dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/deepLightGreen"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="@color/deepLightGreen"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/baseline_calendar_month_24"
                                app:tint="@color/lightGreen" />

                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/apptDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="October 24, 2050"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appointment Date"
                                android:textColor="@color/veryLightBlack"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="11dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/deepLightGreen"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="@color/deepLightGreen"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/baseline_access_time_24"
                                app:tint="@color/lightGreen" />

                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/timeSlot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:30 AM"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Slot Time"
                                android:textColor="@color/veryLightBlack"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="11dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/deepLightGreen"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="@color/deepLightGreen"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/outline_alarm_24"
                                app:tint="@color/lightGreen" />

                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 minutes"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textColor="@color/veryLightBlack"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/deepGreen"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="11dp">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/doctor_s_notes"
                                android:textColor="@color/lightGreen"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/noteDoctor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Strictly follow the prescription provided after the video call."
                                android:textColor="@color/veryLightBlack"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </FrameLayout>



</LinearLayout>