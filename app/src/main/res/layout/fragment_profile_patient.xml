<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">

    <!-- Back -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/outline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Profile"
        android:textColor="@color/lightGreen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
         />

    <!-- Edit Profile -->
    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_edit_24"
        android:contentDescription="Edit Profile"
        app:tint="@color/lightGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@color/deepGreen">

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="16dp"
                android:background="@drawable/round_white_bg"
                android:src="@drawable/baseline_person_24" />

            <!-- Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Manash Khatowal"
                android:textColor="@color/lightGreen"
                android:textSize="19sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="manasash26@gmail.com"
                android:textColor="@color/veryLightBlue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/deepGreen">

            <!-- Mobile -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mobile"
                android:textColor="@color/lightGreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/tvMobile"
                android:text="8133919030"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto" />

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Gender -->
            <TextView
                android:text="Gender"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/lightGreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/tvGender"
                android:text="Male"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto" />

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- DOB -->
            <TextView
                android:text="Date of Birth"
                android:textColor="@color/lightGreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/tvDob"
                android:text="15/12/2025"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto" />

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- Status -->
            <TextView
                android:text="Status"
                android:textColor="@color/lightGreen"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/tvStatus"
                android:text="Patient"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Loader -->
    <include
        android:id="@+id/progressAnim"
        layout="@layout/progress_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/log_out"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:backgroundTint="#E53935"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
