<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/round_white_bg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Greeting -->
    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,Dr. Lorence!"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/lightGreen"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imgVerified"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_verified_24"
        app:layout_constraintStart_toEndOf="@id/tvHello"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a great shift today?"
        android:textSize="12sp"
        android:textColor="@color/lightGreen"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@id/tvHello"
        app:layout_constraintTop_toBottomOf="@id/tvHello"/>

    <!-- Notification -->
    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_notifications_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        android:layout_marginEnd="16dp"/>

    <!-- Blue Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_gradient"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Scan for X-rays"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload patient X-rays for instant Ai-\nassisted analysis and preliminary\n    diagnosis report"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="8dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="Start Scan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:backgroundTint="@color/lightGreen"/>

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_scan_document"/>

            </FrameLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Disease Prediction -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAppointments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ongoingSession"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/appointmentListCurBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_gradient"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightVeryGreen"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" >

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/outline_schedule_24" />

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Appointments\nManage your Schedule"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="5dp"
                >
                <TextView
                    android:id="@+id/pendingApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 pending"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/pureRed"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:background="@drawable/red_bg_stroke"
                    />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/outline_arrow_back_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Book a new consultation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ongoingSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardAppointments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_gradient"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/softMutedPurple"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Video Icon -->
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="40dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/outline_videocam_24" />

                    <!-- Red Dot -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="6dp"
                        android:background="@drawable/red_dot_bg" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ongoing Session"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Now @12:30 PM"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/lightGreen"
                    android:textSize="11sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/outline_arrow_back_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ongoingSession"
        app:layout_constraintEnd_toStartOf="@id/cardDoctors">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_gradient"
            android:gravity="center"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightVeryGreen2"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp" >

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/baseline_history_24" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Logs"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Find Doctors -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDoctors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="56dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@id/cardRecords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ongoingSession">

        <LinearLayout
            android:id="@+id/profileSecondBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_gradient"
            android:gravity="center"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightBlue"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp" >

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/baseline_person_24"
                    app:tint="@color/blue" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_settings"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
