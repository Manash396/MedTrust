<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="7dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/deepGreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/bg_circle_teal"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Alexander Wright"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            android:layout_marginStart="12dp" />

        <!-- COMPLETED Status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:cardBackgroundColor="@color/lightGreenTransparent"
            app:strokeWidth="1dp"
            app:strokeColor="@color/lightGreen"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPLETED"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/lightGreen"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                />

        </com.google.android.material.card.MaterialCardView>


        <!-- Consultation Type -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/outline_videocam_24"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Consultation"
                android:layout_marginStart="6dp"
                android:textColor="#B0B0B0"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Date Label -->
        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textColor="#888888"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProfile"
            android:layout_marginTop="16dp" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Jan 2026 "
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvDateLabel"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            android:layout_marginTop="4dp" />

        <!-- View Prescription Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrescription"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Prescription"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/lightGreen"
            app:cornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvDate"
            app:layout_constraintBottom_toBottomOf="@id/tvDateTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
